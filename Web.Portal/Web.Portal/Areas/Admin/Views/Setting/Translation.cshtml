@section scripts {
    <script>
        var viewData = new WLIU.ViewData();
        var app = angular.module("myApp", ["wliu_database"]);

        app.controller("mycontrl", function ($scope) {
            viewData.LinkScope($scope);
        });
        viewData.Init("/Admin/api/Setting/InitTranslation");
    </script>
}
<div ng-app="myApp" ng-controller="mycontrl">
    <ng-form>
        <fieldset>
            <legend>@Html.Words("search.by")</legend>
            <filter.label db="ViewData.database" tb="Translation" col="search_keyword"></filter.label>
            <filter.textbox db="ViewData.database" tb="Translation" col="search_keyword"></filter.textbox>
            <wliu.search db="ViewData.database" tb="Translation">Search</wliu.search>
        </fieldset>
        <div wliu table grow shrink>
            <div row>
                <div cell style="background-color:#dddddd;">
                    <wliu.navi db="ViewData.database" tb="Translation"></wliu.navi>
                </div>
            </div>
            <div row>
                <div head fixed style="width:40px;">
                </div>
                <div head><wliu.head db="ViewData.database" tb="Translation" col="Keyword"></wliu.head></div>
                <div head large><wliu.head db="ViewData.database" tb="Translation" col="Word_en"></wliu.head></div>
                <div head large><wliu.head db="ViewData.database" tb="Translation" col="Word_cn"></wliu.head></div>
                <div head fixed style="width:60px;"><wliu.head db="ViewData.database" tb="Translation" col="Active"></wliu.head></div>
                <div head fixed style="width:56px;">
                    <wliu.micon db="ViewData.database" tb="Translation" icons="add,save"></wliu.micon>
                </div>
            </div>
            <div row ng-repeat="row in ViewData.database.tables.Translation.rows">
                <div cell center fixed style="width:40px;">
                    <wliu.rowstatus db="ViewData.database" tb="Translation" guid="{{row.guid}}"></wliu.rowstatus>
                </div>
                <div cell>
                    <wliu.textarea db="ViewData.database" tb="Translation" guid="{{row.guid}}" col="Keyword"></wliu.textarea>
                </div>
                <div cell large>
                    <wliu.textarea db="ViewData.database" tb="Translation" guid="{{row.guid}}" col="Word_en"></wliu.textarea>
                </div>
                <div cell large>
                    <wliu.textarea db="ViewData.database" tb="Translation" guid="{{row.guid}}" col="Word_cn"></wliu.textarea>
                </div>
                <div cell center fixed style="width:60px;">
                    <wliu.bool db="ViewData.database" tb="Translation" guid="{{row.guid}}" col="Active"></wliu.bool>
                </div>
                <div cell fixed style="width:56px;">
                    <wliu.bicon db="ViewData.database" tb="Translation" guid="{{row.guid}}" icons="save,cancel,delete"></wliu.bicon>
                </div>
            </div>
        </div>
        <br />
    </ng-form>

    <table.error></table.error>
    <form.error></form.error>
    <wliu.loading oper="save"></wliu.loading>
    <wliu.loading oper="get"></wliu.loading>
    <wliu.tooltip></wliu.tooltip>
    <wliu.hint></wliu.hint>
</div>
